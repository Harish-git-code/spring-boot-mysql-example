pipeline {
    agent {
        // Specify the label or name of the node where you want to run the pipeline
        node {
            label 'Harish-test-machine'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone the Git repository
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                // Navigate to the root folder of the project
                dir('/root/spring-boot-mysql-example') {
                    // Build and run tests using Maven
                    sh 'mvn clean test'
                }
            }
        }

        stage('Package') {
            steps {
                // Navigate to the root folder of the project
                dir('/root/spring-boot-mysql-example') {
                    // Package the application using Maven
                    sh 'mvn clean install'
                }
            }
        }

        stage('Deploy') {
            steps {
                // Navigate to the root folder of the project
                dir('/root/spring-boot-mysql-example') {
                    // Add deployment steps (e.g., run the JAR)
                    sh 'java -jar target/your-application.jar'
                }
            }
        }
    }

    post {
        success {
            // Additional steps to perform when the pipeline is successful
            echo 'Pipeline completed successfully!'
        }
        failure {
            // Additional steps to perform when the pipeline fails
            echo 'Pipeline failed!'
        }
    }
}
