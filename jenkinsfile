pipeline {
    agent {
        // Specify the label or name of the node where you want to run the pipeline
        node {
            label 'Harish-test-machine'
        }
    }

    stages {
    stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }
    stage('Checkout') {
            steps {
                // Clone the Git repository
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                sh 'mvn install -DskipTests'
            }
        }
       stage ('service check') {
          steps {
            sh 'chmod +x ./wrapper.sh'
           }

       }

       stage('Deploy') {
            steps {
                   sh 'sudo cp -r ${WORKSPACE}/service/Harish.service /etc/systemd/system/'
                   sh 'sudo systemctl enable Harish.service'
                   sh 'sudo systemctl start Harish.service'
            }
        }
    }

    post {
        success {
            // Additional steps to perform when the pipeline is successful
            echo 'Pipeline completed successfully!'
        }
        failure {
            // Additional steps to perform when the pipeline fails
            echo 'Pipeline failed!'
        }
    }
}
